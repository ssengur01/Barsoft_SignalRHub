{
  "ConnectionStrings": {
    "BarsoftDb": "Data Source=${DB_SERVER:-localhost};Database=${DB_NAME:-BARSOFT};User Id=${DB_USER:-sa};Password=${DB_PASSWORD};TrustServerCertificate=true;"
  },
  "JWT": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "BarsoftSignalRHub",
    "Audience": "BarsoftClients",
    "ExpirationMinutes": 480
  },
  "RabbitMQ": {
    "Host": "${RABBITMQ_HOST:-rabbitmq}",
    "Port": 5672,
    "Username": "${RABBITMQ_USER:-admin}",
    "Password": "${RABBITMQ_PASS:-admin123}",
    "VirtualHost": "/",
    "ConnectionTimeoutSeconds": 30,
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryIntervalSeconds": 10,
    "RetryCount": 5,
    "RetryDelaySeconds": 5
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Barsoft.SignalRHub.SignalRHub.BackgroundServices": "Information",
      "Barsoft.SignalRHub.SignalRHub.Hubs": "Information"
    }
  },
  "AllowedHosts": "*"
}
